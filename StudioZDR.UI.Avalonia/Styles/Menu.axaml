<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Width="600" Height="300" Padding="20">
			<Menu VerticalAlignment="Top">
				<MenuItem Header="Menu Item 1">
					<MenuItem Header="Submenu Item 1" />
					<MenuItem Header="Submenu Item 2" />
					<Separator />
					<MenuItem Header="Submenu Item 3" />
				</MenuItem>
				<MenuItem Header="Menu Item 2" />
				<MenuItem Header="Menu Item 3" />
				<MenuItem Header="Menu Item 4 With a Very Long Name" />
			</Menu>
		</Border>
	</Design.PreviewWith>

	<Style Selector="Menu > MenuItem">
		<Setter Property="Padding" Value="12,0" />
	</Style>

	<Style Selector="MenuItem > MenuItem">
		<Setter Property="Padding" Value="12,6" />
	</Style>
</Styles>