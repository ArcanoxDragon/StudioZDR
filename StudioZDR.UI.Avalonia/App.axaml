<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:fa="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
			 xmlns:converters="clr-namespace:StudioZDR.UI.Avalonia.Converters"
			 x:Class="StudioZDR.UI.Avalonia.App"
			 RequestedThemeVariant="Dark">
	<Application.Styles>
		<fa:FluentAvaloniaTheme PreferSystemTheme="False" PreferUserAccentColor="True" />
		<StyleInclude Source="/Styles/AppStyles.axaml" />
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Styles/StyleResourceOverrides.axaml" />
			</ResourceDictionary.MergedDictionaries>

			<converters:VectorToColorConverter x:Key="VectorToColorConverter" />
		</ResourceDictionary>
	</Application.Resources>
</Application>